<%- include("../partials/head.ejs") %>

    <%- include("../partials/nav.ejs") %>

        <div class="main-content">

            <div class="content-box-2">

                <h1 class="content-box-titles">ADMIN ACTIVITY CREATE PAGE</h1>
                <form action="/admin/activity" method="post">

                    <div>
                        <label for="type">Select activity type:</label>
                        <select name="type" id="type">
                            <option value="listening">listening</option>
                            <option value="math">math</option>
                            <option value="reading">reading</option>
                            <option value="speaking">speaking</option>
                            <option value="writing">writing</option>
                        </select>
                    </div>

                    <div>
                        <label for="title">Title: </label>
                        <input type="text" name="title" placeholder="Ex: Fill in the blanks" id="title" minlength="4" required />
                    </div>

                    <div>
                        <label for="link">Link: </label>
                        <input type="text" name="link" placeholder="https://" minlength="1" required />
                    </div>

                    <input type="submit" class="form-button-submit" value="Submit">

                </form>

            </div>

        </div>

        <%- include("../partials/footer.ejs") %>